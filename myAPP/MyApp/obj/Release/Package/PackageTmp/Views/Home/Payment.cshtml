@model IEnumerable<MyApp.Models.Booking>

@{
    ViewBag.Title = "Payment";
}

<body style="background-image: url(http://www.ccsgeorgia.org/wp-content/uploads/2017/01/light-gradient-wallpaper-26039-26724-hd-wallpapers.jpg.png)" ;>
    <h2>Payment</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FlightName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dept_City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Arrival_City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dept_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Retrun_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeatNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfPassenger)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dept_City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Arrival_City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dept_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Retrun_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeatNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfPassenger)
                </td>
                <td>
                    @Html.ActionLink("Pay", "Pay", new { id = item.Id }) |
                    @Html.ActionLink("Cancel", "Cancel", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</body>